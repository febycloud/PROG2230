@model IEnumerable<Album>
@{
    ViewData["Title"] = "Filter View";
}

<h1>LINQTest</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Genre</th>
        <th>Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AlbumId</td>
            <td>@item.Title</td>
            <td>@item.Artist.Name</td>
            <td>@item.Genre.Name</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
